{
  "name": "hackspace",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "docs": "sudo turbo run dev --filter docs",
    "auth": "sudo turbo run dev --filter auth",
    "admin": "sudo turbo run dev --filter admin",
    "container": "sudo turbo run dev --filter container",
    "board": "sudo turbo run dev --filter board",
    "hub": "sudo turbo run dev --filter HackHubb",
    "format": "npx prettier . --write",
    "check": "npx prettier . --check",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.5",
  "workspaces": [
    "apps/*",
    "packages/*",
    "HackHubb"
  ],
  "dependencies": {
    "@vercel/speed-insights": "^1.0.2"
  }
}
